{if $new_articles}
 <ul class="news-article">
    {foreach from=$new_articles item=article name=new_articles}
    {if $smarty.foreach.new_articles.index < 3}
    <li>
        <a href="{$article.url}">
            <img width="100" height="70" src="{$option.cdn1_path}{$article.sthumb}" alt="{$article.title|escape:html}">
             <h3>{$article.title|escape:html}</h3>
            <span>{$article.add_time}</span>
        </a>
    </li>
     {/if}
    {/foreach}
</ul>
 {/if}